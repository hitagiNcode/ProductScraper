@model IEnumerable<Product>
@{
    ViewData["Title"] = "Amazon Türkiye Ürün Takibi";
}
<div class="container p-1">
    <div class="row pt-1">
        <div class="col-6">
            <h4 class="text-info">Amazon Türkiye Ürün Listesi</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="AmzTrProductTrack" asp-action="Create" class="btn btn-success">
                Ürün Ekle
            </a>
        </div>
    </div>
</div>

<div class="card-body table-responsive p-0" style="max-height: 700px;">
<table class="table table-bordered table-striped table table-head-fixed text-nowrap" style="width:100%">
    <thead>
        <tr>
            <th style="text-align: center; vertical-align: middle;">
                Ürün Resmi
            </th>
            <th style="text-align: center; vertical-align: middle;">
                Ürün Adı
            </th>
            <th style="text-align: center; vertical-align: middle;">
                Ürün Fiyatı
            </th>
            <th style="text-align: center; vertical-align: middle;">
                Ürün Asin
            </th>
            <th style="text-align: center; vertical-align: middle;">
                Ürün Senkron
            </th>
            <th style="text-align: center; vertical-align: middle;">
                Ürün Url
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;">
                    <img src="@obj.PictureUri" alt="Ürün Resmi" style="max-height:60px;max-width:60px">
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    @obj.Name
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    @obj.Price TL
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    @obj.ASIN
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    @obj.LastSyncTime
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    <a href="@obj.URL" target="_blank"> Ürüne Git</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

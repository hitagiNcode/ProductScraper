@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<h1> Amazon Türkiye Ürün Takibi</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Picture
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Asin
            </th>
            <th>
                Sync Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.PictureUri
                </td>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Price
                </td>
                <td>
                    @obj.ASIN
                </td>
                <td>
                    @obj.LastSyncTime
                </td>
            </tr>
        }
    </tbody>
</table>
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Amazon Türkiye Ürün Takibi";
}
<div class="container p-1">
    <div class="row pt-1">
        <div class="col-6">
            <h4 class="text-info">Amazon Türkiye Ürün Listesi</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="AmzTrProductTrack" asp-action="Create" class="btn btn-success">
                Ürün Ekle
            </a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Picture
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Asin
            </th>
            <th>
                Sync Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;">
                    <img src="@obj.PictureUri" alt="Ürün Resmi" style="max-width:50px;width:100%">
                </td>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Price TL
                </td>
                <td>
                    @obj.ASIN
                </td>
                <td>
                    @obj.LastSyncTime
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    <a href="@obj.URL" target="_blank"> Ürüne Git</a>
                </td>
            </tr>
        }
    </tbody>
</table>